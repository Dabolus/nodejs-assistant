{
  "name": "nodejs-assistant",
  "description": "Google Assistant SDK for Node.js",
  "version": "0.6.1",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf lib && rollup -c rollup.config.ts",
    "test": "jest",
    "lint": "tslint -p .",
    "format": "tslint -p . --fix",
    "generate-docs": "typedoc src --out docs --mode file --name 'Assistant SDK for Node.js' --theme markdown --mdHideSources"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "google-auth-library": "^2.0.1",
    "google-proto-files": "^0.17.0",
    "grpc": "^1.16.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^9.6.39",
    "jest": "^23.6.0",
    "rollup": "^0.67.1",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.19",
    "typescript": "^3.1.6"
  },
  "contributors": [
    "Giorgio Garasto <giorgio@garasto.it>"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/**/*.d.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ]
  }
}
