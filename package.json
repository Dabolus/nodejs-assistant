{
  "name": "nodejs-assistant",
  "description": "Google Assistant SDK for Node.js",
  "version": "0.6.2",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf lib && rollup -c rollup.config.ts",
    "test": "jest",
    "lint": "tslint -p .",
    "format": "tslint -p . --fix",
    "generate-docs": "typedoc src --out api --mode file --name 'Assistant SDK for Node.js' --theme markdown --mdHideSources"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.0",
    "google-auth-library": "^3.1.2",
    "google-proto-files": "^0.20.0",
    "grpc": "^1.20.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^11.13.8",
    "jest": "^24.7.1",
    "rollup": "^1.10.1",
    "rollup-plugin-typescript2": "^0.21.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.2.0",
    "typescript": "^3.4.5"
  },
  "repository": "Dabolus/nodejs-assistant",
  "contributors": [
    "Giorgio Garasto <giorgio@garasto.it>"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/**/*.d.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ]
  }
}
