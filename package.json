{
  "name": "nodejs-assistant",
  "description": "Google Assistant SDK for Node.js",
  "version": "0.6.1",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf lib && rollup -c rollup.config.ts",
    "test": "jest",
    "lint": "tslint -p .",
    "format": "tslint -p . --fix",
    "generate-docs": "typedoc src --out api --mode file --name 'Assistant SDK for Node.js' --theme markdown --mdHideSources"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.4.0",
    "google-auth-library": "^3.1.0",
    "google-proto-files": "^0.18.0",
    "grpc": "^1.19.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.2",
    "jest": "^24.5.0",
    "rollup": "^1.6.0",
    "rollup-plugin-typescript2": "^0.20.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.1.27",
    "typescript": "^3.3.3333"
  },
  "contributors": [
    "Giorgio Garasto <giorgio@garasto.it>"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/**/*.d.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ]
  }
}
